{
  "_id": "pageAccounts",
  "_type": "page.form",
  "components": [
    {
      "_id": "marital",
      "_type": "select",
      "items": [
        {
          "_id": "marital--none",
          "_type": "option",
          "label": "Please select",
          "value": ""
        },
        {
          "_id": "marital--maried",
          "_type": "option",
          "label": "Married",
          "value": "married"
        },
        {
          "_id": "marital--single",
          "_type": "option",
          "label": "Single",
          "value": "single"
        },
        {
          "_id": "marital--divorced",
          "_type": "option",
          "label": "Divorced",
          "value": "divorced"
        },
        {
          "_id": "marital--separated",
          "_type": "option",
          "label": "Separated",
          "value": "separated"
        }
      ],
      "label": "What is your marital status?",
      "legend": "What is your marital status?",
      "name": "status"
    },
    {
      "_id": "maritalYears",
      "_type": "number",
      "label": "How many years have you been married?",
      "name": "years",
      "validation": {
        "exclusiveMinimum": true,
        "maximum": 100,
        "minimum": 1
      }
    },
    {
      "_id": "maritalStatusDetails",
      "_type": "textarea",
      "errors": {
        "required": {
          "inline": "You must answer this question because you answered *‘Married’* to the previous question"
        }
      },
      "label": "Provide details of your marital status",
      "name": "status_details",
      "validation": {
        "maxLength": 20,
        "minLength": 10,
        "required": {
          "identifier": "marital.status",
          "operator": "is",
          "value": "married"
        }
      }
    },
    {
      "_id": "accounts",
      "_type": "checkboxes",
      "items": [
        {
          "_id": "accounts--bank",
          "_type": "checkbox",
          "label": "Bank account",
          "name": "bank",
          "show": {
            "identifier": "planet",
            "operator": "is",
            "value": "bank"
          },
          "value": "yes"
        },
        {
          "_id": "accounts--savings",
          "_type": "checkbox",
          "label": "Savings account",
          "name": "savings",
          "show": {
            "identifier": "planet",
            "negated": true,
            "operator": "is",
            "value": "random"
          },
          "value": "yes"
        }
      ],
      "legend": "Do you have a bank or savings account?",
      "model": "account[0]",
      "show": {
        "identifier": "greeting",
        "operator": "is",
        "value": "Hello"
      },
      "validation": {
        "required": true
      }
    }
  ],
  "heading": "Tell us some more about yourself",
  "model": "marital",
  "steps": [],
  "url": "/accounts"
}